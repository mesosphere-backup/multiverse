{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "zeppelin": {
            "type": "object",
            "properties": {
                "framework-name": {
                    "default": "zeppelin",
                    "description": "The framework name to register with Mesos.",
                    "type": "string",
                    "pattern": "^/?(([a-z0-9]|[a-z0-9][a-z0-9\\-]*[a-z0-9])\\.)*([a-z0-9]|[a-z0-9][a-z0-9\\-]*[a-z0-9])$"
                },
                "dns-suffix": {
                    "default": ".marathon.mesos",
                    "description": "This value is appended to the framework-name value to form the canonical DNS name for the Zeppelin components.",
                    "type": "string",
                    "pattern": "^(?:\\.[a-z][a-z0-9]*?(?:-[a-z0-9]+)*)+$"
                },
                "spark_uri":  {
                    "description": "The URI of the Spark distribution to run with Zeppelin.",
                    "type": "string",
                    "default": "https://downloads.mesosphere.com/spark/assets/spark-1.5.0-multi-roles-v2-bin-2.4.0.tgz"
                },
                "spark_version":  {
                    "description": "The version of the Spark distribution to run with Zeppelin.",
                    "type": "string",
                    "default": "spark-1.5.0-multi-roles-v2-bin-2.4.0"
                },
                "spark_docker_image":  {
                    "description": "The URI of the Spark docker image to use in spark.mesos.executor.docker.image",
                    "type": "string",
                    "default": "mesosphere/spark:1.5.0-multi-roles-v2-bin-2.4.0"
                }
            },
            "required": [
                "spark_uri",
                "spark_version",
                "spark_docker_image"
            ]
        }
    }
}
